---
import type { HTMLAttributes } from "astro/types";
import ResponsiveContainer from "../layout/ResponsiveContainer.astro";
import PaddedContainer from "../layout/PaddedContainer.astro";
import Text from "../ui/Text.astro";
import CtaButtons, {
  type Props as CtaButtonsProps,
} from "../ui/CtaButtons.astro";

export interface Props extends HTMLAttributes<"section"> {
  title: string;
  description: string;
  primaryCta: CtaButtonsProps["primaryCta"];
  secondaryCta?: CtaButtonsProps["secondaryCta"];
  background?: "blue" | "dark" | "gradient";
}

const {
  title,
  description,
  primaryCta,
  secondaryCta,
  background = "blue",
  class: _class = "",
  ...rest
} = Astro.props;

const backgroundClasses = {
  blue: "bg-blue-600 text-white",
  dark: "bg-slate-900 text-white",
  gradient: "bg-gradient-to-br from-blue-600 to-blue-800 text-white",
};
---

<section class={`${backgroundClasses[background]} ${_class}`} {...rest}>
  <ResponsiveContainer size="lg" class:list={["text-center"]}>
    <PaddedContainer paddingX="sm" paddingY="6xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
        {title}
      </h1>

      <Text variant="lead" color="white" class="text-blue-100 mb-8">
        {description}
      </Text>

      <CtaButtons
        primaryCta={primaryCta}
        secondaryCta={secondaryCta}
        alignment="center"
        theme="dark"
      />
    </PaddedContainer>
  </ResponsiveContainer>
</section>
