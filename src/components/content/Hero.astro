---
import Container from "../layout/Container.astro";
import Heading from "../ui/Heading.astro";
import Text from "../ui/Text.astro";
import CtaButtons from "../ui/CtaButtons.astro";

export interface Props {
  title: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
  background?: "blue" | "dark" | "gradient";
  class?: string;
}

const {
  title,
  description,
  primaryCta,
  secondaryCta,
  background = "blue",
  class: className = "",
} = Astro.props;

const backgroundClasses = {
  blue: "bg-blue-600 text-white",
  dark: "bg-slate-900 text-white",
  gradient: "bg-gradient-to-br from-blue-600 to-blue-800 text-white",
};
---

<section class={`${backgroundClasses[background]} ${className}`}>
  <Container size="lg" padding="2xl">
    <div class="text-center max-w-4xl mx-auto">
      <Heading as="h1" variant="hero" color="white" class="mb-6">
        {title}
      </Heading>

      {
        description && (
          <Text
            variant="lead"
            size="xl"
            color="white"
            class="text-blue-100 mb-8"
          >
            {description}
          </Text>
        )
      }

      <CtaButtons
        primaryCta={primaryCta}
        secondaryCta={secondaryCta}
        alignment="center"
        theme="dark"
      />
    </div>
  </Container>
</section>
