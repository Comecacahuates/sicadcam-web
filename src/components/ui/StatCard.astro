---
import Card from './Card.astro';
import Heading from './Heading.astro';
import Text from './Text.astro';

export interface Props {
  stat: string;
  title: string;
  description: string;
  statColor?: 'blue' | 'green' | 'purple' | 'orange';
  hover?: boolean;
  class?: string;
}

const { 
  stat,
  title,
  description,
  statColor = 'blue',
  hover = true,
  class: className = ''
} = Astro.props;

const statColorClasses = {
  blue: 'text-blue-600',
  green: 'text-green-600',
  purple: 'text-purple-600',
  orange: 'text-orange-600'
};
---

<Card hover={hover} class={className}>
  <div class="text-center">
    <div class={`text-4xl font-bold mb-2 ${statColorClasses[statColor]}`}>
      {stat}
    </div>
    <Heading as="h3" variant="card" class="mb-2">
      {title}
    </Heading>
    <Text variant="body" color="muted">
      {description}
    </Text>
  </div>
</Card>
