---
export interface Props {
  direction?: 'row' | 'column';
  alignment?: 'start' | 'center' | 'end' | 'stretch';
  gap?: 'sm' | 'md' | 'lg' | 'xl';
  responsive?: boolean;
  class?: string;
}

const { 
  direction = 'row',
  alignment = 'center',
  gap = 'md',
  responsive = true,
  class: className = ''
} = Astro.props;

const directionClasses = {
  row: 'flex-row',
  column: 'flex-col'
};

const alignmentClasses = {
  start: 'justify-start',
  center: 'justify-center',
  end: 'justify-end',
  stretch: 'justify-stretch'
};

const gapClasses = {
  sm: 'gap-2',
  md: 'gap-4',
  lg: 'gap-6',
  xl: 'gap-8'
};

// Build responsive classes
let responsiveClass = '';
if (responsive && direction === 'row') {
  responsiveClass = 'flex-col sm:flex-row';
} else {
  responsiveClass = directionClasses[direction];
}

const classes = `flex ${responsiveClass} ${alignmentClasses[alignment]} ${gapClasses[gap]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
