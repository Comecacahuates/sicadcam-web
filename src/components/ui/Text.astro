---
import type { HTMLAttributes } from "astro/types";

type TextVariant = "body" | "lead" | "small";
type TextColor = "none" | "default" | "muted" | "light" | "white" | "blue";

export interface Props extends HTMLAttributes<"p"> {
  variant?: TextVariant;
  color?: TextColor;
}

const {
  variant = "body",
  color = "none",
  class: _class = "",
  ...rest
} = Astro.props;

const variantClasses: Record<TextVariant, string> = {
  body: "text-base leading-relaxed",
  lead: "text-lg md:text-xl leading-relaxed font-medium",
  small: "text-sm leading-normal",
};

const colorClasses: Record<TextColor, string> = {
  none: "",
  default: "text-slate-700",
  muted: "text-slate-600",
  light: "text-slate-500",
  white: "text-white",
  blue: "text-blue-600",
};
---

<p
  class:list={[variantClasses[variant], colorClasses[color], _class]}
  {...rest}
>
  <slot />
</p>
