---
import Heading from './Heading.astro';
import Text from './Text.astro';

export interface Props {
  industries: Array<{
    title: string;
    description: string;
    imageSrc: string;
    imageAlt: string;
  }>;
  columns?: '2' | '3' | '4';
  imageAspect?: 'square' | 'video' | 'portrait';
  class?: string;
}

const { industries, columns = '3', imageAspect = 'video', class: className = '' } = Astro.props;

const gridClasses = {
  '2': 'grid-cols-1 md:grid-cols-2',
  '3': 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  '4': 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4'
};

const aspectClasses = {
  square: 'aspect-square',
  video: 'aspect-video',
  portrait: 'aspect-[3/4]'
};
---

<div class={`grid ${gridClasses[columns]} gap-8 ${className}`}>
  {industries.map((industry) => (
    <div class="group cursor-pointer">
      <div class={`${aspectClasses[imageAspect]} mb-4 overflow-hidden rounded-lg`}>
        <img 
          src={industry.imageSrc}
          alt={industry.imageAlt}
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        />
      </div>
      <div class="space-y-2">
        <Heading as="h3" variant="card" class="text-gray-900 group-hover:text-blue-600 transition-colors duration-200">
          {industry.title}
        </Heading>
        <Text variant="body" color="muted" class="leading-relaxed">
          {industry.description}
        </Text>
      </div>
    </div>
  ))}
</div>
