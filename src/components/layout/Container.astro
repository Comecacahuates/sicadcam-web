---
import type { HTMLAttributes } from "astro/types";

type ContainerSize = "sm" | "md" | "lg" | "xl" | "full";
type ContainerPadding = "none" | "sm" | "md" | "lg" | "xl" | "2xl";

export interface Props extends HTMLAttributes<"div"> {
  size?: ContainerSize;
  padding?: ContainerPadding;
}

const {
  size = "lg",
  padding = "2xl",
  class: _class = "",
  ...rest
} = Astro.props;

const sizeClasses: Record<ContainerSize, string> = {
  sm: "max-w-3xl",
  md: "max-w-5xl",
  lg: "max-w-7xl",
  xl: "max-w-screen-xl",
  full: "max-w-none",
};

const paddingClasses: Record<ContainerPadding, string> = {
  none: "",
  sm: "px-4 py-12",
  md: "px-4 sm:px-6 lg:px-8 py-20 sm:py-24",
  lg: "px-4 sm:px-6 lg:px-8 py-24 sm:py-32",
  xl: "px-4 sm:px-6 lg:px-8 py-32 sm:py-40",
  "2xl": "px-4 sm:px-6 lg:px-8 py-40 sm:py-48",
};
---

<div
  class:list={[
    `w-full mx-auto`,
    _class,
    sizeClasses[size],
    paddingClasses[padding],
  ]}
  {...rest}
>
  <slot />
</div>
