---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl' | '2xl';
  class?: string;
}

const { 
  size = 'lg', 
  padding = '2xl',
  class: className = '' 
} = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl', 
  lg: 'max-w-7xl',
  xl: 'max-w-screen-xl',
  full: 'max-w-none'
};

const paddingClasses = {
  none: '',
  sm: 'px-4 py-12',
  md: 'px-4 sm:px-6 lg:px-8 py-20 sm:py-24',
  lg: 'px-4 sm:px-6 lg:px-8 py-24 sm:py-32',
  xl: 'px-4 sm:px-6 lg:px-8 py-32 sm:py-40',
  '2xl': 'px-4 sm:px-6 lg:px-8 py-40 sm:py-48'
};
---

<div class={`w-full mx-auto ${sizeClasses[size]} ${paddingClasses[padding]} ${className}`}>
  <slot />
</div>
