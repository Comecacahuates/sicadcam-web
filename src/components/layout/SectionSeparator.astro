---
import type { HTMLAttributes } from "astro/types";
import ResponsiveContainer from "./ResponsiveContainer.astro";
import PaddedContainer from "./PaddedContainer.astro";
import SectionHeader from "../content/SectionHeader.astro";

interface Props extends HTMLAttributes<"section"> {
  title: string;
  description: string;
}

const { title, description, class: _class, ...rest } = Astro.props;
---

<section class:list={[_class]} {...rest}>
  <ResponsiveContainer>
    <PaddedContainer paddingY="4xl">
      <SectionHeader
        title={title}
        description={description}
        textColor="white"
      />
    </PaddedContainer>
  </ResponsiveContainer>
</section>
